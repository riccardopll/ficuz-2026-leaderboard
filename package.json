{
  "name": "ficuz-2026-leaderboard",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "db:migrate": "drizzle-kit generate && wrangler d1 migrations apply ficuz-2026-db --remote",
    "db:migrate:local": "drizzle-kit generate && wrangler d1 migrations apply ficuz-2026-db",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config drizzle.config.local.ts",
    "deploy": "npx astro build && npx wrangler deploy",
    "dev": "npx astro build && npx wrangler dev",
    "lint": "npx prettier . --write && npx sort-package-json"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.11",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/node": "^22.15.1",
    "drizzle-kit": "^0.31.8",
    "prettier": "3.8.0",
    "tsx": "^4.21.0",
    "wrangler": "^4.59.2"
  }
}
