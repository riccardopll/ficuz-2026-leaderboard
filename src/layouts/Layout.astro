---
import "../styles/global.css";

interface Props {
  title?: string;
  locale?: string;
}

const { title = "Ficuz 2026 Leaderboard", locale = "en" } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-100">
    <slot />
  </body>
</html>
